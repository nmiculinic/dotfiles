for_window [class=".*"] border pixel 3
gaps inner 10
gaps outer 2
smart_gaps on
smart_borders on

exec_always feh --bg-fill --randomize ~/.wallpapers/*
set $bg-color 	         #444444
set $inactive-bg-color   #444444
set $text-color          #9ea6ae
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

bar {
    font pango: SansP 10
    status_command i3blocks -c ~/.config/i3/i3blocks.conf
        tray_output LVDS1
        position bottom
        strip_workspace_numbers no
  colors {
      background $bg-color
          separator #757575
      #                  border             background         text
      focused_workspace  #434852            $bg-color          $text-color
      inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
      urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color

  }
}

# window colors
#                       border              background         text                 indicator             child_border
client.focused          #141542             #141542            $text-color          #141542               #141542
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $inactive-bg-color    $inactive-bg-color
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $inactive-bg-color    $inactive-bg-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $urgent-bg-color      $urgent-bg-color 
